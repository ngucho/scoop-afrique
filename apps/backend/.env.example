# Auth0 â€” JWT validation is local (decode + iss/aud/exp). No backend call to Auth0 for token check.
AUTH0_DOMAIN="your-tenant.auth0.com"
AUTH0_AUDIENCE="https://api.scoop-afrique.com"

# Auth0 Management API (only when backend updates user metadata or password). Use either set below.
# AUTH0_MANAGEMENT_CLIENT_ID=...
# AUTH0_MANAGEMENT_CLIENT_SECRET=...
# Or: AUTH0_CLIENT_ID=... and AUTH0_CLIENT_SECRET=...

# Server
PORT=4000
NODE_ENV=development

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3001

# API prefix
API_PREFIX=/api/v1

# Supabase (required for DB and auth in production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
